<Window x:Class="IT3B_Chat.Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IT3B_Chat.Server"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="textAddress" Text="ws://127.0.0.1:8181" Margin="5"/>
            <Button x:Name="btnStartServer" Content="Start Server" Click="BtnStartServer_Click" Margin="5"/>
            <Button x:Name="btnStopServer" Content="Stop Server" Click="BtnStopServer_Click" Margin="5"/>
            <ListBox x:Name="listBoxLog" Height="300"/>
        </StackPanel>

    </Grid>
</Window>
