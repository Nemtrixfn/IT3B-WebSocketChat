<Window x:Class="IT3B_Chat.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IT3B_Chat.Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="ServerAddress" Text="ws://127.0.0.1:8181" Height="30" Margin="5"/>
            <Button Content="Connect" Click="Connect_Click" Height="30" Margin="5"/>
            <Button Content="Disconnect" Click="Disconnect_Click" Height="30" Margin="5"/>
            <ListBox x:Name="MessagesListBox" Height="250" Margin="5"/>
            <TextBox x:Name="MessageTextBox" Height="30" Margin="5"/>
            <Button Content="Send" Click="Send_Click" Height="30" Margin="5"/>
        </StackPanel>

    </Grid>
</Window>
